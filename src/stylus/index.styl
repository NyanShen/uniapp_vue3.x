.care-box {
  min-height: 100vh;
  font-size: 36rpx;
  color: #333;
  background-color: #E1EEF7;
}

.ways-list {
  padding: 30rpx;
}

.ways-item {
  display: flex;
  align-items: center;
  padding: 70rpx 40rpx;
  margin-top: 30rpx;
  border-radius: 30rpx;
  background-color: #fff;
}

.icon {
  width: 120rpx;
  height: 120rpx;
  margin-right: 30rpx;
}

.img {
  width: 100%;
  height: 100%;
}

.content {
  flex: 1;
  font-weight: 600;
}

.flex-right {
  width: 17rpx;
  height: 28rpx;
  background: url('/static/arrow_right41.png') no-repeat center;
  background-size: 17rpx 28rpx;
}